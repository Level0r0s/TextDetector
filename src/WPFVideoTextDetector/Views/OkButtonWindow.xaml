<Window x:Class="WPFVideoTextDetector.Views.OkButtonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OkButtonWindow" Height="194.923" Width="389.313" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Name="capitalText" Grid.Row="0" Style="{StaticResource HeaderTextBlockStyle}">Text</TextBlock>

        <Grid Margin="30" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Height="auto" Grid.Row="0" Style="{StaticResource TextBlockStyle}" Name="textInformation">Some text</TextBlock>
            <Button Style="{StaticResource ButtonStyle}" Grid.Row="1" Click="Button_Click">Ok</Button>
        </Grid>
    </Grid>
</Window>
